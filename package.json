{
  "name": "fluente",
  "version": "3.0.0",
  "description": "Make fluent objects like a boss!",
  "main": "fluente.js",
  "types": "fluente.d.ts",
  "files": [
    "fluente.js",
    "fluente.d.ts"
  ],
  "keywords": [
    "fluent",
    "immutable",
